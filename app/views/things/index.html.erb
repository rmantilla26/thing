<p id="notice"><%= notice %></p>

<h1>Listado de Clases </h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= thing.name %></td>
        <td><%= link_to 'Ver', thing %></td>
        <td><%= link_to 'Editar', edit_thing_path(thing) %></td>
        <td><%= link_to 'Eliminar', thing, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Clase', new_thing_path %>
